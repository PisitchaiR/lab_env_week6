pipeline {
    agent any
    stages{
        stage('Welcome to master'){
            steps{
                echo 'Welcome to master'
            }
        }

        stage('tigger to slave job')
        {
            
            steps{
                script{
                    def data = readFile("data.json")
                    echo "name: ${data.name}"
                    
                    // build job: 'slave', parameters: [string(name: 'name', value: lines.get(0)), string(name: 'age', value: lines.get(1))]
                }
            }
        }
    }
}