pipeline {
  agent any
â€‹
  stages {
      stage('Prompt for input') {
          steps {
              script {
                  def userInput
                  userInput = input message: 'Enter a value:', id: 'user_input'
                  try {
                      echo "User input: ${userInput}"
                  } catch (Exception e) {
                      userInput = input message: 'Invalid input. Please enter a valid value:', id: 'user_input'
                      retry(3)
                  }
              }
          }
      }
  }

}